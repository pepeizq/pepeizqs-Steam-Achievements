<Page
    x:Class="Steam_Achievements.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:animations="using:Microsoft.Toolkit.Uwp.UI.Animations"
    xmlns:fa="using:FontAwesome.UWP"
    
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" Loaded="Page_Loaded">

    <Grid Background="{StaticResource ColorGridPrincipal}">
        <Grid.RowDefinitions>
            <RowDefinition Height="32"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid x:Name="gridTitulo" Grid.Row="0" Background="{StaticResource GridTituloBackground}">
            <TextBlock x:Name="tbTitulo" Margin="50,0,0,0" FontSize="13" Foreground="White" VerticalAlignment="Center"/>
        </Grid>

        <NavigationView x:Name="nvPrincipal" Grid.Row="1" Loaded="Nv_Loaded" ItemInvoked="Nv_ItemInvoked"
                        OpenPaneLength="200" AlwaysShowHeader="False" IsSettingsVisible="False">
            <NavigationView.PaneFooter>
                <StackPanel Orientation="Vertical">
                    <StackPanel Orientation="Horizontal">
                        <controls:ImageEx x:Name="imagenCuentaSeleccionada" Width="38" Height="38" IsCacheEnabled="True" HorizontalAlignment="Left" Margin="5"/>
                        <TextBlock x:Name="tbCuentaSeleccionada" VerticalAlignment="Center" Foreground="White"/>
                    </StackPanel>
                  
                    <NavigationViewItem x:Name="itemMasCosas" Tapped="Nv_ItemFlyout" PointerEntered="UsuarioEntraBoton" PointerExited="UsuarioSaleBoton">
                        <FlyoutBase.AttachedFlyout>
                            <MenuFlyout x:Name="botonMasCosasMenu"/>
                        </FlyoutBase.AttachedFlyout>
                    </NavigationViewItem>
                </StackPanel>
            </NavigationView.PaneFooter>
            
            <Grid>
                <Grid.Transitions>
                    <TransitionCollection>
                        <EdgeUIThemeTransition Edge="Bottom"/>
                    </TransitionCollection>
                </Grid.Transitions>

                <Grid.Background>
                    <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                        <GradientStop Color="#FFE4E4E4" Offset="0.5" />
                        <GradientStop Color="#FFBFBFBF" Offset="1.0" />
                    </LinearGradientBrush>
                </Grid.Background>

                <Grid x:Name="gridCuentas" Visibility="Collapsed" Padding="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition x:Name="gridColumnaUsuarios" Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Grid Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" Padding="20" Margin="10" BorderBrush="{StaticResource BrushSecundario}" BorderThickness="1">
                            <Grid.Background>
                                <LinearGradientBrush StartPoint="0.8,0" EndPoint="0.8,1">
                                    <GradientStop Color="#FFE4E4E4" Offset="0.5" />
                                    <GradientStop Color="#FFBFBFBF" Offset="1.0" />
                                </LinearGradientBrush>
                            </Grid.Background>

                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock x:Uid="AddAccountInfo" Grid.Row="0" Width="450" TextWrapping="Wrap" TextAlignment="Center"/>
                            <TextBox x:Name="tbUsuarioCuenta" Grid.Row="1" MinWidth="300" Margin="20" TextWrapping="Wrap" TextAlignment="Center"/>

                            <Button x:Name="botonAgregarUsuario" Grid.Row="2" Margin="10" Padding="10,15" HorizontalAlignment="Center" IsEnabled="False" Background="{StaticResource BrushSecundario}" PointerEntered="UsuarioEntraBoton" PointerExited="UsuarioSaleBoton">
                                <StackPanel Orientation="Horizontal">
                                    <fa:FontAwesome Icon="Plus" Margin="0,0,10,0" VerticalAlignment="Center" Foreground="White"/>
                                    <TextBlock x:Uid="AddAccount" Foreground="White"/>
                                </StackPanel>
                            </Button>
                        </Grid>

                        <Grid x:Name="gridListaUsuarios" Grid.Column="1" Visibility="Collapsed" HorizontalAlignment="Center" VerticalAlignment="Center" Padding="20" Margin="10" BorderBrush="{StaticResource BrushSecundario}" BorderThickness="1">
                            <Grid.Background>
                                <LinearGradientBrush StartPoint="0.8,0" EndPoint="0.8,1">
                                    <GradientStop Color="#FFE4E4E4" Offset="0.5" />
                                    <GradientStop Color="#FFBFBFBF" Offset="1.0" />
                                </LinearGradientBrush>
                            </Grid.Background>

                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <TextBlock x:Uid="SelectAccount" Grid.Row="0" Width="450" TextWrapping="Wrap" HorizontalAlignment="Center" TextAlignment="Center"/>

                            <ListView x:Name="lvUsuarios" Grid.Row="1" Margin="15" IsItemClickEnabled="True" HorizontalAlignment="Center" MaxHeight="500" ItemContainerStyle="{StaticResource ListViewEstilo1}"/>
                        </Grid>
                    </Grid>
                </Grid>

                <Grid x:Name="gridJuegos" Visibility="Collapsed">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Grid x:Name="gridBusquedaJuegos" Grid.Row="0" Visibility="Collapsed" Margin="0,0,0,10" Padding="10" Background="{StaticResource BrushCuarto}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <fa:FontAwesome Grid.Column="0" Icon="Search" VerticalAlignment="Center" Margin="10,0" Foreground="{StaticResource BrushSecundario}"/>
                        <TextBox x:Name="tbBuscarJuegos" Grid.Column="1" TextWrapping="Wrap" VerticalAlignment="Center" Margin="5,0"/>

                        <Grid Grid.Column="2" Margin="10,0" Padding="10" Background="IndianRed">
                            <TextBlock x:Uid="Search" TextWrapping="Wrap" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Grid>
                    </Grid>

                    <ProgressRing x:Name="prJuegos" Grid.Row="1" Visibility="Collapsed" IsActive="True" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="SaddleBrown" Height="50" Width="50"/>

                    <controls:AdaptiveGridView x:Name="gvJuegos" Grid.Row="1"
                                       IsItemClickEnabled="True" DesiredWidth="184" ItemHeight="69" 
                                       animations:ReorderGridAnimation.Duration="250" Padding="15,10,10,10">
                    </controls:AdaptiveGridView>
                </Grid>

                <Grid x:Name="gridLogros" Visibility="Collapsed" Padding="10">
                    <Grid HorizontalAlignment="Center" VerticalAlignment="Center" BorderBrush="{StaticResource BrushSecundario}" BorderThickness="1" Width="800" Margin="0,50">
                        <Grid.Background>
                            <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                <GradientStop Color="#FFE4E4E4" Offset="0.5" />
                                <GradientStop Color="#FFBFBFBF" Offset="1.0" />
                            </LinearGradientBrush>
                        </Grid.Background>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0" Padding="10" Background="{StaticResource BrushCuarto}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Border Grid.Column="0" BorderBrush="{StaticResource BrushSecundario}" BorderThickness="1">
                                <controls:ImageEx x:Name="imagenJuegoSeleccionado" IsCacheEnabled="True"/>
                            </Border>

                            <Grid Grid.Column="1" Margin="10,0,0,0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock x:Name="tbJuegoSeleccionado" Grid.Row="0" VerticalAlignment="Center"/>

                                <Grid x:Name="gridJuegoSeleccionadoProgreso" Grid.Row="1" Padding="0,5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <ProgressBar x:Name="pbJuegoSeleccionado" Grid.Column="0" VerticalAlignment="Center" Value="0" Foreground="Sienna" Width="200" Margin="0,0,10,0" Height="10"/>
                                    <TextBlock x:Name="tbJuegoSeleccionadoLogros" Grid.Column="1" VerticalAlignment="Center"/>
                                </Grid>

                                <Grid x:Name="gridJuegoSeleccionadoLogro" Grid.Row="1" Padding="0,5" Visibility="Collapsed">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <controls:ImageEx x:Name="imagenJuegoSeleccionadoLogro" Grid.Column="0" IsCacheEnabled="True" Width="32" Height="32" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                    <TextBlock x:Name="tbJuegoSeleccionadoLogro" Grid.Column="1" VerticalAlignment="Center"/>
                                </Grid>
                            </Grid>

                            <fa:FontAwesome x:Name="iconoYoutube" Grid.Column="2" Icon="Youtube" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="{StaticResource BrushSecundario}" FontSize="30" Margin="0,0,10,0" Visibility="Collapsed">
                                <ToolTipService.ToolTip>
                                    <TextBlock x:Uid="TooltipYoutube" TextWrapping="Wrap" FontSize="15"/>
                                </ToolTipService.ToolTip>
                            </fa:FontAwesome>

                            <Button x:Name="botonVolverListadoLogros" Grid.Column="2" Margin="10" Padding="10" HorizontalAlignment="Center" VerticalAlignment="Center" Background="{StaticResource BrushSecundario}" Visibility="Collapsed" PointerEntered="UsuarioEntraBoton" PointerExited="UsuarioSaleBoton">
                                <StackPanel Orientation="Horizontal">
                                    <FontIcon Glyph="&#xE830;" FontFamily="Segoe MDL2 Assets" Margin="0,0,10,0" VerticalAlignment="Center" Foreground="White"/>
                                    <TextBlock x:Uid="Back" Foreground="White"/>
                                </StackPanel>
                            </Button>
                        </Grid>

                        <Grid x:Name="panelMensajeNoLogros" Grid.Row="1" Margin="30" Padding="10" Background="IndianRed" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock x:Uid="NoAchievements" TextWrapping="Wrap" Foreground="White"/>
                        </Grid>

                        <ProgressRing x:Name="prLogros" Grid.Row="1" Margin="30" Visibility="Collapsed" IsActive="True" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="SaddleBrown" Height="50" Width="50"/>

                        <ListView x:Name="lvLogros" Grid.Row="1" Padding="10" IsItemClickEnabled="True" Visibility="Collapsed">
                            <ListView.ItemContainerStyle>
                                <Style TargetType="ListViewItem">
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                    <Setter Property="Padding" Value="0"/>
                                </Style>
                            </ListView.ItemContainerStyle>
                        </ListView>

                        <MediaElement x:Name="meLogros" Grid.Row="1" Visibility="Collapsed" AreTransportControlsEnabled="True" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                    </Grid>                   
                </Grid>
            </Grid> 
        </NavigationView> 
    </Grid>
</Page>
