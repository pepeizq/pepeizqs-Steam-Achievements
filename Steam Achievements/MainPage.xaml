<Page
    x:Class="Steam_Achievements.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:animations="using:Microsoft.Toolkit.Uwp.UI.Animations"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" Loaded="Page_Loaded">

    <Grid Background="{StaticResource ColorGridPrincipal}">
        <Grid.RowDefinitions>
            <RowDefinition Height="32"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid x:Name="gridTitulo" Grid.Row="0" Background="{StaticResource GridTituloBackground}">
            <TextBlock x:Name="tbTitulo" Margin="50,0,0,0" FontSize="13" Foreground="White" VerticalAlignment="Center"/>
        </Grid>

        <NavigationView x:Name="nvPrincipal" Grid.Row="1" Loaded="Nv_Loaded" ItemInvoked="Nv_ItemInvoked"
                        OpenPaneLength="200" AlwaysShowHeader="False" IsSettingsVisible="False">

            <Grid Padding="10">
                <Grid.Transitions>
                    <TransitionCollection>
                        <EdgeUIThemeTransition Edge="Bottom"/>
                    </TransitionCollection>
                </Grid.Transitions>

                <Grid.Background>
                    <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                        <GradientStop Color="#FFE4E4E4" Offset="0.5" />
                        <GradientStop Color="#FFBFBFBF" Offset="1.0" />
                    </LinearGradientBrush>
                </Grid.Background>

                <Grid x:Name="gridCuentas" Visibility="Collapsed">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition x:Name="gridColumnaUsuarios" Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Grid Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock x:Uid="AddAccountInfo" Grid.Row="0" Width="450" TextWrapping="Wrap" TextAlignment="Center"/>
                        <TextBox x:Name="tbUsuarioCuenta" Grid.Row="1" MinWidth="300" Margin="20" TextWrapping="Wrap" TextAlignment="Center"/>

                        <Button x:Name="botonAgregarUsuario" Grid.Row="2" Margin="10" Padding="10,15" HorizontalAlignment="Center" IsEnabled="False" Background="{StaticResource BrushSecundario}">
                            <StackPanel Orientation="Horizontal">
                                <FontIcon Glyph="&#xE72A;" FontFamily="Segoe MDL2 Assets" Margin="0,0,10,0" VerticalAlignment="Center" Foreground="White"/>
                                <TextBlock x:Uid="AddAccount" Foreground="White"/>
                            </StackPanel>
                        </Button>
                    </Grid>

                    <Grid x:Name="gridListaUsuarios" Grid.Column="1" Visibility="Collapsed" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock x:Uid="SelectAccount" Grid.Row="0" Width="450" TextWrapping="Wrap" HorizontalAlignment="Center" TextAlignment="Center"/>

                        <ListView x:Name="lvUsuarios" Grid.Row="1" Margin="15" Background="{StaticResource BrushSecundario}" IsItemClickEnabled="True" HorizontalAlignment="Center" MaxHeight="500"/>
                    </Grid>
                </Grid>

                <Grid x:Name="gridJuegos" Visibility="Collapsed">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Grid x:Name="gridBusquedaJuegos" Grid.Row="0" Visibility="Collapsed" Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" FontFamily="Segoe MDL2 Assets" Text="&#xE71E;" FontSize="20" VerticalAlignment="Center" Margin="10,0"/>
                        <TextBox x:Name="tbBuscarJuegos" Grid.Column="1" TextWrapping="Wrap"/>

                        <controls:DropShadowPanel x:Name="panelMensajeLogros" Grid.Column="2" Margin="10,0" Color="Black" 
                                              HorizontalAlignment="Center" VerticalAlignment="Center"
                                              BlurRadius="4" ShadowOpacity="0.5" OffsetZ="5">
                            <Grid Padding="10" Background="IndianRed">
                                <TextBlock x:Uid="Search" TextWrapping="Wrap" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            </Grid>
                        </controls:DropShadowPanel>
                    </Grid>

                    <ProgressRing x:Name="prJuegos" Grid.Row="1" Visibility="Collapsed" IsActive="True" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="SaddleBrown" Height="50" Width="50"/>

                    <controls:AdaptiveGridView x:Name="gvJuegos" Grid.Row="1"
                                       IsItemClickEnabled="True" DesiredWidth="184" ItemHeight="69" 
                                       animations:ReorderGridAnimation.Duration="250">
                        <controls:AdaptiveGridView.ItemContainerStyle>
                            <Style TargetType="GridViewItem">
                                <Setter Property="Margin" Value="1"/>
                            </Style>
                        </controls:AdaptiveGridView.ItemContainerStyle>
                    </controls:AdaptiveGridView>
                </Grid>

                <Grid x:Name="gridLogros" Visibility="Collapsed">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0" Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0" BorderBrush="{StaticResource BrushSecundario}" BorderThickness="1">
                            <controls:ImageEx x:Name="imagenJuegoSeleccionado" IsCacheEnabled="True"/>
                        </Border>
                       
                        <Grid Grid.Column="1" Margin="10,0,0,0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock x:Name="tbJuegoSeleccionado" Grid.Row="0" VerticalAlignment="Center"/>

                            <Grid x:Name="gridJuegoSeleccionadoProgreso" Grid.Row="1" Padding="0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <ProgressBar x:Name="pbJuegoSeleccionado" Grid.Column="0" VerticalAlignment="Center" Value="0" Foreground="Sienna" Width="200" Margin="0,0,10,0" Height="10"/>
                                <TextBlock x:Name="tbJuegoSeleccionadoLogros" Grid.Column="1" VerticalAlignment="Center"/>
                            </Grid>

                            <Grid x:Name="gridJuegoSeleccionadoLogro" Grid.Row="1" Padding="0,5" Visibility="Collapsed">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <controls:ImageEx x:Name="imagenJuegoSeleccionadoLogro" Grid.Column="0" IsCacheEnabled="True" Width="32" Height="32" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                <TextBlock x:Name="tbJuegoSeleccionadoLogro" Grid.Column="1" VerticalAlignment="Center"/>
                            </Grid>
                        </Grid>

                        <Button x:Name="botonVolverListadoLogros" Grid.Column="2" Margin="10,10,0,10" Padding="10" HorizontalAlignment="Center" VerticalAlignment="Center" Background="{StaticResource BrushSecundario}" Visibility="Collapsed">
                            <StackPanel Orientation="Horizontal">
                                <FontIcon Glyph="&#xE830;" FontFamily="Segoe MDL2 Assets" Margin="0,0,10,0" VerticalAlignment="Center" Foreground="White"/>
                                <TextBlock x:Uid="Back" Foreground="White"/>
                            </StackPanel>
                        </Button>
                    </Grid>

                    <controls:DropShadowPanel x:Name="panelMensajeNoLogros" Grid.Row="1" Margin="10" Color="Black" 
                                              HorizontalAlignment="Center" VerticalAlignment="Center"
                                              BlurRadius="4" ShadowOpacity="0.5" OffsetZ="5" Visibility="Collapsed">
                        <Grid Padding="10" Background="IndianRed">
                            <TextBlock x:Uid="NoAchievements" TextWrapping="Wrap" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Grid>
                    </controls:DropShadowPanel>

                    <ProgressRing x:Name="prLogros" Grid.Row="1" Visibility="Collapsed" IsActive="True" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="SaddleBrown" Height="50" Width="50"/>

                    <ListView x:Name="lvLogros" Grid.Row="1" IsItemClickEnabled="True" Visibility="Collapsed">
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                <Setter Property="Padding" Value="0"/>
                            </Style>
                        </ListView.ItemContainerStyle>
                    </ListView>

                    <MediaElement x:Name="meLogros" Grid.Row="1" Visibility="Collapsed" AreTransportControlsEnabled="True" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                </Grid>

                <Grid x:Name="gridMasCosas" Visibility="Collapsed">
                    <ScrollViewer>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <ListView Grid.Column="0" IsItemClickEnabled="True" ItemClick="LvMasCosasItemClick">
                                <ListViewItem Background="{StaticResource BrushSecundario}" Margin="0,0,0,30">
                                    <StackPanel Orientation="Horizontal" Tag="0">
                                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE8E1;" Foreground="White" Margin="0,0,10,0" VerticalAlignment="Center"/>
                                        <TextBlock x:Uid="VoteApp" Foreground="White" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </ListViewItem>
                                <ListViewItem x:Name="lvMasCosasMasApps" Background="{StaticResource BrushSecundario}" Margin="0,0,0,5">
                                    <StackPanel Orientation="Horizontal" Tag="1">
                                        <controls:ImageEx Source="Assets\MasCosas\pepeizq.png" Margin="0,0,10,0" Width="15" Height="15" IsCacheEnabled="True" VerticalAlignment="Center"/>
                                        <TextBlock x:Uid="MoreApps" Foreground="White" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </ListViewItem>
                                <ListViewItem x:Name="lvMasCosasActualizaciones" Background="{StaticResource BrushSecundario}" Margin="0,0,0,30">
                                    <StackPanel Orientation="Horizontal" Tag="2">
                                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE72C;" Foreground="White" Margin="0,0,10,0" VerticalAlignment="Center"/>
                                        <TextBlock x:Uid="Updates" Foreground="White" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </ListViewItem>
                                <ListViewItem x:Name="lvMasCosasContacto" Background="{StaticResource BrushSecundario}" Margin="0,0,0,5">
                                    <StackPanel Orientation="Horizontal" Tag="3">
                                        <controls:ImageEx Source="Assets\MasCosas\contacto.png" Margin="0,0,10,0" Width="15" Height="15" IsCacheEnabled="True" VerticalAlignment="Center"/>
                                        <TextBlock x:Uid="Contact" Foreground="White" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </ListViewItem>
                                <ListViewItem x:Name="lvMasCosasReportarFallo" Background="{StaticResource BrushSecundario}" Margin="0,0,0,30">
                                    <StackPanel Orientation="Horizontal" Tag="4">
                                        <controls:ImageEx Source="Assets\MasCosas\feedback.png" Margin="0,0,10,0" Width="15" Height="15" IsCacheEnabled="True" VerticalAlignment="Center"/>
                                        <TextBlock x:Uid="ReportBug" Foreground="White" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </ListViewItem>
                                <ListViewItem x:Name="lvMasCosasCodigoFuente" Background="{StaticResource BrushSecundario}">
                                    <StackPanel Orientation="Horizontal" Tag="6">
                                        <controls:ImageEx Source="Assets\MasCosas\github.png" Margin="0,0,10,0" Width="15" Height="15" IsCacheEnabled="True" VerticalAlignment="Center"/>
                                        <TextBlock x:Uid="SourceCode" Foreground="White" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </ListViewItem>
                            </ListView>

                            <Grid Grid.Column="1" Margin="10,0,0,0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <ProgressBar x:Name="pbMasCosas" Grid.Row="0" Foreground="{StaticResource BrushSecundario}" Visibility="Collapsed" Height="20" IsIndeterminate="True"/>
                                <WebView x:Name="wvMasCosas" Grid.Row="1"/>
                            </Grid>
                        </Grid>
                    </ScrollViewer>
                </Grid>
            </Grid> 
        </NavigationView> 
    </Grid>
</Page>
