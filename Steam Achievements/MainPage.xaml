<Page
    x:Class="Steam_Achievements.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" Loaded="Page_Loaded" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid x:Name="gridTopAcrilico" Grid.Row="0" Height="32"/>
        <Grid Grid.Row="0">
            <Grid.Background>
                <SolidColorBrush Color="SaddleBrown" Opacity="0.6"/>
            </Grid.Background>

            <TextBlock x:Name="tbTitulo" Foreground="White" Margin="65,0,0,0" VerticalAlignment="Center" FontSize="13"/>
        </Grid>
        <Grid Grid.Row="1" Background="Transparent">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid x:Name="gridMenuAcrilico" Grid.Column="0"/>
            <Grid x:Name="gridMenu" Grid.Column="0">
                <Grid.Background>
                    <SolidColorBrush Color="SaddleBrown" Opacity="0.6"/>
                </Grid.Background>

                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Orientation="Vertical">
                    <Button x:Name="botonLogrosIntro" Foreground="White" Background="Transparent" Padding="15">
                        <ToolTipService.ToolTip>
                            <TextBlock x:Name="botonLogrosIntroTexto" FontSize="16"/>
                        </ToolTipService.ToolTip>

                        <Button.Content>
                            <Image Source="Assets\steam_logo.png" Width="26" Height="26" HorizontalAlignment="Center"/>
                        </Button.Content>
                    </Button>
                    <Button x:Name="botonLogrosExpandido" Foreground="White" Background="Transparent" Padding="5" Visibility="Collapsed">
                        <ToolTipService.ToolTip>
                            <TextBlock x:Name="botonLogrosExpandidoTexto" FontSize="16"/>
                        </ToolTipService.ToolTip>

                        <Button.Content>
                            <controls:ImageEx x:Name="imagenLogrosExpandido" Width="46" Height="46"/>
                        </Button.Content>
                    </Button>
                </StackPanel>
                <StackPanel Grid.Row="1" Orientation="Vertical">
                    <Button x:Name="botonVotar" Foreground="White" Background="Transparent" Padding="15">
                        <ToolTipService.ToolTip>
                            <TextBlock x:Name="botonVotarTexto" FontSize="16"/>
                        </ToolTipService.ToolTip>

                        <Button.Content>
                            <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE8E1;" FontSize="26" HorizontalAlignment="Center"/>
                        </Button.Content>
                    </Button>
                    <Button x:Name="botonMasCosas" Foreground="White" Background="Transparent" Padding="15">
                        <ToolTipService.ToolTip>
                            <TextBlock x:Name="botonMasCosasTexto" FontSize="16"/>
                        </ToolTipService.ToolTip>

                        <Button.Content>
                            <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE712;" FontSize="26" HorizontalAlignment="Center"/>
                        </Button.Content>
                    </Button>
                </StackPanel>
            </Grid>

            <Grid x:Name="gridLogrosIntro" Grid.Column="1">
                <Grid.Background>
                    <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                        <GradientStop Color="#FFE4E4E4" Offset="0.5" />
                        <GradientStop Color="#FFBFBFBF" Offset="1.0" />
                    </LinearGradientBrush>
                </Grid.Background>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition x:Name="gridColumnaUsuarios" Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock x:Name="tbInfoUsuarioCuenta" Grid.Row="0" Width="450" TextWrapping="Wrap"/>
                    <TextBox x:Name="tbUsuarioCuenta" Grid.Row="1" MinWidth="300" Margin="20" TextWrapping="Wrap" TextAlignment="Center"/>

                    <controls:DropShadowPanel Grid.Row="2" Margin="10" Color="Black" HorizontalAlignment="Center"
                                              BlurRadius="4" ShadowOpacity="0.5" OffsetZ="5">
                        <Button x:Name="botonAgregarUsuario" Padding="10,15" HorizontalAlignment="Center" IsEnabled="False" Background="Sienna">
                            <StackPanel Orientation="Horizontal">
                                <FontIcon Glyph="&#xE72A;" FontFamily="Segoe MDL2 Assets" Margin="0,0,10,0" VerticalAlignment="Center" Foreground="White"/>
                                <TextBlock x:Name="botonAgregarUsuarioTexto" Foreground="White"/>
                            </StackPanel>
                        </Button>
                    </controls:DropShadowPanel>
                </Grid>

                <Grid x:Name="gridListaUsuarios" Grid.Column="1" Visibility="Collapsed" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock x:Name="tbInfoUsuarioSeleccionar" Grid.Row="0" Width="450" TextWrapping="Wrap" HorizontalAlignment="Center" TextAlignment="Center"/>

                    <controls:DropShadowPanel Grid.Row="1" Margin="15" Color="Black" HorizontalAlignment="Center"
                                              BlurRadius="4" ShadowOpacity="0.5" OffsetZ="5">
                        <controls:DropShadowPanel.Transitions>
                            <TransitionCollection>
                                <EdgeUIThemeTransition Edge="Bottom"/>
                            </TransitionCollection>
                        </controls:DropShadowPanel.Transitions>

                        <ListView x:Name="lvUsuarios" Background="Sienna" IsItemClickEnabled="True" HorizontalAlignment="Center" MaxHeight="500"/>
                    </controls:DropShadowPanel>                        
                </Grid>
            </Grid>

            <Grid x:Name="gridLogrosExpandido" Grid.Column="1" Visibility="Collapsed" ScrollViewer.HorizontalScrollBarVisibility="Auto">
                <Grid.Background>
                    <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                        <GradientStop Color="#FFE4E4E4" Offset="0.5" />
                        <GradientStop Color="#FFBFBFBF" Offset="1.0" />
                    </LinearGradientBrush>
                </Grid.Background>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition x:Name="gridColumnaJuegos" Width="*"/>
                    <ColumnDefinition x:Name="gridColumnaLogros" Width="Auto"/>
                    <ColumnDefinition x:Name="gridColumnaLogrosDatos" Width="Auto"/>
                </Grid.ColumnDefinitions>

                <ProgressRing x:Name="prJuegos" Grid.Column="0" Visibility="Collapsed" IsActive="True" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="SaddleBrown" Height="50" Width="50"/>

                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                                     
                    <Grid x:Name="gridBusquedaJuegos" Grid.Row="0" Visibility="Collapsed" Margin="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" FontFamily="Segoe MDL2 Assets" Text="&#xE71E;" FontSize="20" VerticalAlignment="Center" Margin="5"/>
                        <TextBox x:Name="tbBuscarJuegos" Grid.Column="1" Margin="5" TextWrapping="Wrap"/>
                    </Grid>

                    <ListView x:Name="lvJuegos" Grid.Row="1" IsItemClickEnabled="True"/>
                </Grid>

                <Grid x:Name="gridLogros" Grid.Column="1" Margin="5,0" Visibility="Collapsed">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition x:Name="gridSubColumnaLogros" Width="*"/>
                    </Grid.ColumnDefinitions>

                    <controls:DropShadowPanel x:Name="panelMensajeLogros" Margin="10" Color="Black" HorizontalAlignment="Center" VerticalAlignment="Center"
                                              BlurRadius="4" ShadowOpacity="0.5" OffsetZ="5">
                        <Grid Padding="10" Background="IndianRed">
                            <TextBlock x:Name="tbAvisoLogros" TextWrapping="Wrap" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Grid>
                    </controls:DropShadowPanel>
                 
                    <ProgressRing x:Name="prLogros" Grid.Column="0" Visibility="Collapsed" IsActive="True" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="SaddleBrown" Height="50" Width="50"/>
                    <ListView x:Name="lvLogros" Grid.Column="0" IsItemClickEnabled="True" Visibility="Collapsed"/>
                </Grid>

                <Grid x:Name="gridLogrosMasDatos" Grid.Column="2" Margin="5,0" Visibility="Collapsed" ScrollViewer.HorizontalScrollBarVisibility="Visible">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0" Padding="5">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock x:Name="tbCuentasLogro" Grid.Row="0" Visibility="Collapsed" Margin="5"/>
                        <GridView x:Name="gvCuentasLogro" Grid.Row="1"/>
                    </Grid>

                    <Grid x:Name="gridBotonesLogro" Grid.Row="1" Visibility="Collapsed">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <controls:DropShadowPanel Grid.Row="0" Margin="10" Color="Black"
                                              BlurRadius="4" ShadowOpacity="0.5" OffsetZ="5">
                            <Button x:Name="botonBuscarGoogleLogro" Padding="10,15" Width="150" Background="Sienna">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock x:Name="botonBuscarGoogleLogroTexto" Foreground="White"/>
                                </StackPanel>
                            </Button>
                        </controls:DropShadowPanel>

                        <controls:DropShadowPanel Grid.Row="1" Margin="10" Color="Black"
                                              BlurRadius="4" ShadowOpacity="0.5" OffsetZ="5">
                            <Button x:Name="botonBuscarYoutubeLogro" Padding="10,15" Width="150" Background="Sienna">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock x:Name="botonBuscarYoutubeLogroTexto" Foreground="White"/>
                                </StackPanel>
                            </Button>
                        </controls:DropShadowPanel>
                    </Grid>
                </Grid>
            </Grid>

            <Popup x:Name="popupMasCosas" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Bottom">
                <Popup.ChildTransitions>
                    <TransitionCollection>
                        <PaneThemeTransition Edge="Left"/>
                    </TransitionCollection>
                </Popup.ChildTransitions>

                <StackPanel x:Name="spMasCosas" Orientation="Vertical" Width="200" Background="Sienna">
                    <Button x:Name="botonMasApps" Padding="10" Foreground="White" Width="200" HorizontalContentAlignment="Left">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal">
                                <controls:ImageEx Source="Assets\social_pepeizq.png" Margin="0,0,10,0" Width="20" Height="20" IsCacheEnabled="True"/>
                                <TextBlock x:Name="botonMasAppsTexto" Foreground="White" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button.Content>
                    </Button>
                    <Button x:Name="botonContacto" Padding="10" Foreground="White" Width="200" HorizontalContentAlignment="Left">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal">
                                <controls:ImageEx Source="Assets\social_contacto.png" Margin="0,0,10,0" Width="20" Height="20" IsCacheEnabled="True"/>
                                <TextBlock x:Name="botonContactoTexto" Foreground="White" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button.Content>
                    </Button>
                    <Button x:Name="botonReportar" Padding="10" Foreground="White" Width="200" HorizontalContentAlignment="Left">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal">
                                <controls:ImageEx Source="Assets\social_feedback.png" Margin="0,0,10,0" Width="20" Height="20" IsCacheEnabled="True"/>
                                <TextBlock x:Name="botonReportarTexto" Foreground="White" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button.Content>
                    </Button>
                    <Button x:Name="botonCodigoFuente" Padding="10" Foreground="White" Width="200" HorizontalContentAlignment="Left">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal">
                                <controls:ImageEx Source="Assets\social_github.png" Margin="0,0,10,0" Width="20" Height="20" IsCacheEnabled="True"/>
                                <TextBlock x:Name="botonCodigoFuenteTexto" Foreground="White" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button.Content>
                    </Button>
                </StackPanel>
            </Popup>
        </Grid>
    </Grid>
</Page>
